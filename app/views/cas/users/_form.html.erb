<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'cas/shared/error_messages' %>

      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, class: 'form-control' %> <br />

      <%= f.label :email, "Email" %>
      <%= f.email_field :email, class: 'form-control' %><br />

      <% if current_user.admin? %>
        <%= f.label :roles, "Cargo" %>
        <%= f.collection_select :roles, Cas::User::ROLES, :to_s, :humanize %></p>
      <% end %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password, class: 'form-control' %><br />

      <%= f.label :password_confirmation, "Confirmar senha" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %><br />

      <%= f.submit "Salvar", id: "save-form" %><br />
    <% end %>
  </div>
</div>
